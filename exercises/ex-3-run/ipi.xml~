      <temperature units='kelvin'> 200 </temperature>
      <pressure units='megapascal'> 10 </pressure>
    </ensemble>
    <motion mode='dynamics'>
	  <dynamics mode='npt'>
	    <barostat mode='isotropic'>
          <tau units='femtosecond'> 200</tau>
